{
	"name": "ollama-chat",
	"displayName": "Ollama Chat",
	"description": "VSCode frontend for locally running Ollama",
	"version": "0.0.1",
	"publisher": "shikaan",
	"private": true,
	"license": "MIT",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"browser": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "ollama-chat.chat",
					"name": "Ollama Chat"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "esbuild --bundle ./src/extension.ts --outdir=dist --external:vscode --minify --platform=node",
		"package": "vsce pack"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@vscode/vsce": "^3.2.1",
		"esbuild": "^0.24.0"
	}
}
